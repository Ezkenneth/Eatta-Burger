<h1>Eatta Burger App!</h1>
<hr>
<br>
<br>
<div class="imageburg"></div>
<h2>Add a Burger <i class="fas fa-plus-square"></i></h2>
<form class="create-form">

  <div class="form-group">
    <label for="ca">Burger Name:</label>
    <input type="text" id="ca" name="name">
  </div>

  
  <button type="submit" class="create-form">Add Burger</button>
</form>
<container>
<ul class="col-6">
  {{#each burgers}}
  {{#unless devoured}}
<li class="toEat" >{{id}} - {{name}} -- <div>
  <button class="devour" data-id = {{id}}> Devour</button>
</div></li>
       {{/unless}}
    {{/each}}
</ul>

<ul class="col-6">
  {{#each burgers}}
  {{#if devoured}}
<li class="eaten">{{id}} - {{name}} </li>
       {{/if}}
    {{/each}}
</ul>
</container>